                <Label Style="{StaticResource MediumLabel}" Text="{Binding BeepRecord.BirdName}" />
                <!--<Label Style="{StaticResource SmallLabel}" Text="{Binding Monkey.Location, StringFormat='Location: {0}'}" />
                <Label Style="{StaticResource SmallLabel}" Text="{Binding Monkey.Population, StringFormat='Population: {0}'}" />-->
                <Entry 
                    MaxLength="20"
                    Text="{Binding BeepRecord.BirdName}" />
                <Entry 
                    MaxLength="20"
                    Text="{Binding BeepRecord.Notes}" />

            </VerticalStackLayout>

            <CollectionView ItemsSource="{Binding BeepRecord.BeepEntries}" Grid.Row="3">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:BeepEntry" >
                        <Label Style="{StaticResource LargeLabel}" Text="{Binding Value}"  Padding="20">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding Selected}" Value="True">
                                    <Setter Property="BackgroundColor" Value="Yellow"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


            <HorizontalStackLayout Grid.Row="4">
                <Button Text="Previous entry"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Command="{Binding PreviousBeepEntryCommand}" />
                <Button Text="Next entry"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Command="{Binding NextBeepEntryCommand}" />
                <Button Text="Save record"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Command="{Binding SaveBeepRecordCommand}" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="5">
                <Button Text="Add 1"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Command="{Binding Add1Command}" />
                <Button Text="Subtract 1"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Command="{Binding Subtract1Command}" />
                
            </HorizontalStackLayout>
            <Grid WidthRequest="240" Grid.Row="6"
              HeightRequest="480"
              ColumnDefinitions="80, 80, 80"
              RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
              ColumnSpacing="2"
              RowSpacing="2"
              HorizontalOptions="Start"
              VerticalOptions="Center">
                <Button Text="CLEAR"
                    Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    Command="{Binding ClearCommand}" />
                <Button Text="7"
                    Grid.Row="2" Grid.Column="0"
                    Command="{Binding DigitCommand}"
                    CommandParameter="7" />
                <Button Text="8"
                    Grid.Row="2" Grid.Column="1"
                    Command="{Binding DigitCommand}"
                    CommandParameter="8" />
                <Button Text="9"
                    Grid.Row="2" Grid.Column="2"
                    Command="{Binding DigitCommand}"
                    CommandParameter="9" />
                <Button Text="4"
                    Grid.Row="3" Grid.Column="0"
                    Command="{Binding DigitCommand}"
                    CommandParameter="4" />
                <Button Text="5"
                    Grid.Row="3" Grid.Column="1"
                    Command="{Binding DigitCommand}"
                    CommandParameter="5" />
                <Button Text="6"
                    Grid.Row="3" Grid.Column="2"
                    Command="{Binding DigitCommand}"
                    CommandParameter="6" />
                <Button Text="1"
                    Grid.Row="4" Grid.Column="0"
                    Command="{Binding DigitCommand}"
                    CommandParameter="1" />
                <Button Text="2"
                    Grid.Row="4" Grid.Column="1"
                    Command="{Binding DigitCommand}"
                    CommandParameter="2" />
                <Button Text="3"
                    Grid.Row="4" Grid.Column="2"
                    Command="{Binding DigitCommand}"
                    CommandParameter="3" />
                <Button Text="0"
                    Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                    Command="{Binding DigitCommand}"
                    CommandParameter="0" />

            </Grid> 


